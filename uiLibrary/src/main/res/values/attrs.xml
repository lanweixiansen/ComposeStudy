<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  -->
    <declare-styleable name="PickerView">
        <attr name="preferredMaxOffsetItemCount" />
        <attr name="itemHeight" />
        <attr name="textSize" />
        <attr name="textColor" />
        <attr name="selectTextColor" />
        <attr name="isCyclic" />
        <attr name="autoFitSize" />
        <attr name="curved" />
        <attr name="hideBackground" />
    </declare-styleable>

    <attr name="preferredMaxOffsetItemCount" format="integer" />
    <attr name="itemHeight" format="dimension" />
    <attr name="textSize" format="dimension" />
    <attr name="textColor" format="color" />
    <attr name="selectTextColor" format="color" />
    <attr name="isCyclic" format="boolean" />
    <attr name="autoFitSize" format="boolean" />
    <attr name="curved" format="boolean" />
    <attr name="hideBackground" format="boolean" />

    <!--  -->
    <declare-styleable name="CommonTopBar">
        <attr name="topBarTitle" />
        <attr name="show_back_icon" />
        <attr name="add_top_padding" />

    </declare-styleable>

    <attr name="topBarTitle" format="string" />
    <attr name="show_back_icon" format="boolean" />
    <attr name="add_top_padding" format="boolean" />


    <!--  -->
    <declare-styleable name="RoundImageView">
        <attr name="riv_oval" />
        <attr name="riv_border_color" />
        <attr name="riv_border_width" />
        <attr name="riv_radius" />
    </declare-styleable>

    <attr name="riv_oval" format="boolean" />
    <attr name="riv_border_color" format="color" />
    <attr name="riv_border_width" format="dimension" />
    <attr name="riv_radius" format="dimension" />


    <declare-styleable name="ScrollTextView">
        <attr name="sl_textColor" />
        <attr name="sl_textSize" />
        <attr name="sl_text" />
        <attr name="sl_textStyle" />
    </declare-styleable>
    <attr name="sl_textSize" format="dimension" />
    <attr name="sl_textColor" format="color" />
    <attr name="sl_textStyle" format="enum">
        <enum name="bold" value="1" />
        <enum name="normal" value="0" />
    </attr>
    <attr name="sl_text" format="string" />


</resources>