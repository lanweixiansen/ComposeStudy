<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="base_loading_dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <declare-styleable name="PickerView">
        <attr name="preferredMaxOffsetItemCount" />
        <attr name="itemHeight" />
        <attr name="textSize" />
        <attr name="textColor" />
        <attr name="selectTextColor" />
        <attr name="isCyclic" />
        <attr name="autoFitSize" />
        <attr name="curved" />
        <attr name="hideBackground"/>
    </declare-styleable>

    <attr name="preferredMaxOffsetItemCount" format="integer" />
    <attr name="itemHeight" format="dimension" />
    <attr name="textSize" format="dimension" />
    <attr name="textColor" format="color" />
    <attr name="selectTextColor" format="color" />
    <attr name="isCyclic" format="boolean" />
    <attr name="autoFitSize" format="boolean" />
    <attr name="curved" format="boolean" />
    <attr name="hideBackground" format="boolean"/>

</resources>